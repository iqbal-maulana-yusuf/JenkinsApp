pipeline {
    agent any

    parameters {
        string(name: 'APP_NAME', defaultValue: 'JenkinsApp', description: 'Application name')
        string(name: 'SERVICE_NAME', defaultValue: 'JenkinsApp', description: 'Systemd service name')
        string(name: 'VERSION', defaultValue: '1.0.0', description: 'Package version')
        string(name: 'RUNTIME', defaultValue: 'linux-x64', description: 'Runtime identifier')
        string(name: 'APT_REPO_PATH', defaultValue: '/usr/local/share/myrepo', description: 'Local APT repo directory')
    }

    environment {
        SUDO_PASS = credentials('sudo_pass')
        DEB_DIR = "deb"
        PUBLISH_DIR = "publish"
    }

    stages {

        stage('Restore') {
            steps { sh "dotnet restore" }
        }

        stage('Build') {
            steps { sh "dotnet build -c Release" }
        }

        stage('Publish') {
            steps {
                sh """
                rm -rf ${PUBLISH_DIR}
                dotnet publish \
                    -c Release \
                    -r ${params.RUNTIME} \
                    --self-contained true \
                    -o ${PUBLISH_DIR}
                """
            }
        }

        stage('Prepare Debian Structure') {
            steps {
                sh """
                rm -rf ${DEB_DIR}

                mkdir -p ${DEB_DIR}/DEBIAN
                mkdir -p ${DEB_DIR}/opt/${params.APP_NAME}
                mkdir -p ${DEB_DIR}/etc/systemd/system

                cp -r ${PUBLISH_DIR}/* ${DEB_DIR}/opt/${params.APP_NAME}/
                """
            }

            // CONTROL FILE
            steps {
                sh """
cat <<EOF > ${DEB_DIR}/DEBIAN/control
Package: ${params.APP_NAME}
Version: ${params.VERSION}
Section: base
Priority: optional
Architecture: amd64
Maintainer: CI System
Description: ${params.APP_NAME} ASP.NET Web API
EOF
                """
            }

            // SYSTEMD SERVICE
            steps {
                sh """
cat <<EOF > ${DEB_DIR}/etc/systemd/system/${params.SERVICE_NAME}.service
[Unit]
Description=${params.APP_NAME} Web API
After=network.target

[Service]
Type=simple
ExecStart=/opt/${params.APP_NAME}/${params.APP_NAME}
WorkingDirectory=/opt/${params.APP_NAME}
Restart=always
RestartSec=5
Environment=DOTNET_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
EOF
                """
            }

            // Maintainer Scripts
            steps {
                sh """
cat << 'EOF' > ${DEB_DIR}/DEBIAN/preinst
#!/bin/bash
set -e
systemctl stop ${params.SERVICE_NAME} 2>/dev/null || true
exit 0
EOF

cat << 'EOF' > ${DEB_DIR}/DEBIAN/postinst
#!/bin/bash
set -e
chmod +x /opt/${params.APP_NAME}/${params.APP_NAME}
systemctl daemon-reload
systemctl enable ${params.SERVICE_NAME}
systemctl restart ${params.SERVICE_NAME}
exit 0
EOF

cat << 'EOF' > ${DEB_DIR}/DEBIAN/prerm
#!/bin/bash
set -e
systemctl stop ${params.SERVICE_NAME} 2>/dev/null || true
exit 0
EOF

cat << 'EOF' > ${DEB_DIR}/DEBIAN/postrm
#!/bin/bash
set -e
systemctl daemon-reload
exit 0
EOF

chmod 755 ${DEB_DIR}/DEBIAN/*
                """
            }
        }

        stage('Build .deb Package') {
            steps {
                sh "dpkg-deb --build ${DEB_DIR} ${params.APP_NAME}_${params.VERSION}.deb"
            }
        }

        stage('Update Local APT Repo') {
            steps {
                sh """
echo $SUDO_PASS | sudo -S mkdir -p ${params.APT_REPO_PATH}
echo $SUDO_PASS | sudo -S cp ${params.APP_NAME}_${params.VERSION}.deb ${params.APT_REPO_PATH}/

cd ${params.APT_REPO_PATH}

sudo dpkg-scanpackages . > Packages
gzip -fk Packages
                """
            }
        }

        stage('Install From Repo') {
            steps { sh "sudo apt update && sudo apt install -y ${params.APP_NAME}" }
        }
    }

    post {
        success { echo "Pipeline success!" }
        failure { echo "Pipeline failed!" }
    }
}
