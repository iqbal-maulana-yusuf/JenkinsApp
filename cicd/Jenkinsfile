pipeline {
    agent any

    parameters {
        string(name: 'APP_NAME', defaultValue: 'JenkinsApp', description: 'Application package name')
        string(name: 'APP_PUBLISH_NAME', defaultValue: 'debian13', description: 'Application publish name')
        string(name: 'SERVICE_NAME', defaultValue: 'JenkinsApp', description: 'Systemd service name')
        string(name: 'VERSION', defaultValue: '1.0.0', description: 'Package version')
        string(name: 'RUNTIME', defaultValue: 'linux-x64', description: 'Runtime identifier')
        string(name: 'APT_REPO_PATH', defaultValue: '/usr/local/share/myrepo', description: 'Local APT repo directory')
    }

    environment {
        APP_DIR = "JenkinsApp"
        DEB_DIR = "deb"
        SUDO_PASS = credentials('sudo_pass')
    }

    triggers {
        pollSCM("*/1 * * * *")   // poll setiap 1 menit
    }

    stages {

        stage('Restore') {
            steps {
                sh "dotnet restore"
            }
        }

        stage('Build') {
            steps {
                sh "dotnet build -c Release"
            }
        }

        stage('Publish - Self Contained') {
            steps {
                sh """
                cd ${APP_DIR}
                dotnet publish \
                    -c Release \
                    -r ${params.RUNTIME} \
                    --self-contained true \
                    -o ${params.APP_PUBLISH_NAME}
                """
            }
        }

        stage('Prepare Debian Package Structure') {
            steps {

                sh """
                rm -rf ${DEB_DIR}
                mkdir -p ${DEB_DIR}/DEBIAN
                mkdir -p ${DEB_DIR}/opt/${params.APP_NAME}
                mkdir -p ${DEB_DIR}/etc/systemd/system
                """

                sh """
                cp -r ${APP_DIR}/${params.APP_PUBLISH_NAME} ${DEB_DIR}/opt/${params.APP_NAME}/
                """

                /* =============================
                   Generate DEBIAN/control file
                   ============================= */
                sh """
cat <<EOF > ${DEB_DIR}/DEBIAN/control
Package: ${params.APP_NAME}
Version: ${params.VERSION}
Section: base
Priority: optional
Architecture: amd64
Maintainer: CI/CD Pipeline
Description: ${params.APP_NAME} Web API Service
EOF
                """

                /* =======================================
                   Generate systemd service file
                   ======================================= */
                sh """
cat <<EOF > ${DEB_DIR}/etc/systemd/system/${params.SERVICE_NAME}.service
[Unit]
Description=${params.APP_NAME} Web API
After=network.target

[Service]
Type=simple
ExecStart=/opt/${params.APP_NAME}/${params.APP_NAME}
Restart=always
RestartSec=5
User=root
Environment=DOTNET_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
EOF
                """
            }
        }

        stage('Build .deb Package') {
            steps {
                sh """
                dpkg-deb --build ${DEB_DIR} ${params.APP_NAME}_${params.VERSION}.deb
                """
            }
        }
        
        stage('Update Local APT Repository') {
            steps {
                sh """
                echo $SUDO_PASS | sudo -S mkdir -p ${params.APT_REPO_PATH}
                echo $SUDO_PASS | sudo -S cp ${params.APP_NAME}_${params.VERSION}.deb ${params.APT_REPO_PATH}/
                 
                cd ${params.APT_REPO_PATH}
                 
                echo $SUDO_PASS | sudo -S dpkg-scanpackages . /dev/null | gzip -9c | sudo tee Packages.gz > /dev/null
                echo $SUDO_PASS | sudo -S dpkg-scanpackages . /dev/null | sudo tee Packages > /dev/null
                """
            }
        }
    }

    post {
        always {
            echo "Running"
        }
        success {
            echo "Running success"
        }
        failure {
            echo "Running failure"
        }
        cleanup {
            echo "cleanup file"
        }
    }
}
